<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="utf-8">
  <meta content="width=device-width, initial-scale=1.0" name="viewport">

  <title>GreenChain | <%= title%>
  </title>
  <!-- Favicons -->
  <link href="img/favicon.png" rel="icon">
  <link href="img/apple-touch-icon.png" rel="apple-touch-icon">

  <!-- Google Fonts -->
  <link
    href="https://fonts.googleapis.com/css?family=Open+Sans:300,300i,400,400i,600,600i,700,700i|Nunito:300,300i,400,400i,600,600i,700,700i|Poppins:300,300i,400,400i,500,500i,600,600i,700,700i"
    rel="stylesheet">

  <!-- Vendor CSS Files -->
  <link href="vendor/aos/aos.css" rel="stylesheet">
  <link href="vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">
  <link href="vendor/bootstrap-icons/bootstrap-icons.css" rel="stylesheet">
  <link href="vendor/glightbox/css/glightbox.min.css" rel="stylesheet">
  <link href="vendor/remixicon/remixicon.css" rel="stylesheet">
  <link href="vendor/swiper/swiper-bundle.min.css" rel="stylesheet">

  <!-- Template Main CSS File -->
  <link href="css/style.css" rel="stylesheet">

</head>

<body>

  <!-- ======= Header ======= -->
  <header id="header" class="header fixed-top">
    <div class="container-fluid container-xl d-flex align-items-center justify-content-between">

      <a href="/dashboard" class="logo d-flex align-items-center">
        <img src="img/logo.png" alt="">
        <span>GreenChain</span>
      </a>

      <nav id="navbar" class="navbar">
        <ul>
          <li><a class="nav-link scrollto" id="kyc" href="/kyc-verification">KYC Verification</a></li>
          <li><a class="nav-link scrollto" id="marketplace" href="/marketplace">Marketplace</a></li>
          <li><a class="nav-link scrollto" id="sellToken" href="/sell-token">Sell Token</a></li>
          <li><a class="nav-link scrollto" id="buyToken" href="/buy-token">Buy Token</a></li>
          <li><a class="nav-link scrollto" id="co2-update" href="/mark-co2">Update Co2 Emission</a></li>
          <li><a class="nav-link scrollto" id="reportLink" href="/report-co2">Industry Report</a></li>
          <li><a class="nav-link scrollto" href="/dashboard">Dashboard</a></li>
          <li><a class="getstarted scrollto" href="/auth/logout">Logout</a></li>
        </ul>
        <i class="bi bi-list mobile-nav-toggle"></i>
      </nav><!-- .navbar -->

    </div>
  </header><!-- End Header -->

  <!-- ======= Hero Section ======= -->
  <section id="hero" style="height: 1200px;" class="hero d-flex align-items-center">

    <div class="container">
      <div class="row">
        <div class="col-lg-12 d-flex flex-column justify-content-center">
          <h1 data-aos="fade-up"><u>Wallet ID</u></h1>
          <h1 data-aos="fade-up" id="walletID"></h1>
          <div style="display: flex;justify-content: space-between;margin-bottom: 64px;margin-top: 24px;">
            <div class="col-md-6">
              <h1 data-aos="fade-up" data-aos-delay="400"><u>Role</u></h1>
              <h1 data-aos="fade-up" data-aos-delay="400" id="role"></h1>
            </div>
            <div class="col-md-6">
              <h1 data-aos="fade-up" data-aos-delay="600"><u>Name</u></h1>
              <h1 data-aos="fade-up" data-aos-delay="500" id="name"></h1>
            </div>
          </div>

          <div style="display: flex;justify-content: space-between;margin-bottom: 64px;margin-top: 24px;">
            <div class="col-md-6">
              <h1 data-aos="fade-up" data-aos-delay="400" id="quiz-title"><u></u></h1>
            </div>
            <div class="col-md-6">
              <h1 data-aos="fade-up" data-aos-delay="400" id="quiz-link"></h1>
            </div>
          </div>
          <div id="kycSection" style="display: flex;justify-content: space-between;margin-bottom: 64px;margin-top: 24px;">
           
            <div class="col-md-6">
              <h1 data-aos="fade-up" data-aos-delay="600"><u>KYC Status</u></h1>
              <h1 data-aos="fade-up" data-aos-delay="500" id="kycStatus"></h1>
            </div>
            <div class="col-md-6">
              <h1 data-aos="fade-up" data-aos-delay="600"><u>See your document</u></h1>
              <h1 data-aos="fade-up" data-aos-delay="500" id="docLink"></h1>
            </div>
          </div>
          <div style="display: flex;justify-content: space-between;margin-bottom: 24px;margin-top: 24px;">
            <!-- token details -->
            <div class="col-md-6" id="tokenNameTitle">
              <h1 data-aos="fade-up" data-aos-delay="600"><u>Token Name</u></h1>
              <h1 data-aos="fade-up" data-aos-delay="500" id="tokenName"></h1>
            </div>
            <div class="col-md-6" id="tokenSymbolTitle">
              <h1 data-aos="fade-up" data-aos-delay="600"><u>Token Symbol</u></h1>
              <h1 data-aos="fade-up" data-aos-delay="500" id="tokenSymbol"></h1>
            </div>
          </div>
          <div style="display: flex;justify-content: space-between;margin-bottom: 24px;margin-top: 24px;" id="tokenTitle">
            <div class="col-md-6">
              <h1 data-aos="fade-up" data-aos-delay="600"><u>Available Tokens</u></h1>
              <h1 data-aos="fade-up" data-aos-delay="500" id="tokenAvailable"></h1>
            </div>
            <div class="col-md-6" id="industryAllowance">
              <h1 data-aos="fade-up" data-aos-delay="600"><u>Your Industry Allowance</u></h1>
              <h1 data-aos="fade-up" data-aos-delay="500" id="tokenAllowance"></h1>
            </div>
          </div>
          <div style="display: flex;justify-content: space-between;margin-bottom: 24px;margin-top: 24px;" id="tokenStatusTitle">
            <div class="col-md-6">
              <h1 data-aos="fade-up" data-aos-delay="600"><u>Current Token Price</u></h1>
              <h1 data-aos="fade-up" data-aos-delay="500" id="tokenPrice"></h1>
            </div>
            <div class="col-md-6">
              <h1 data-aos="fade-up" data-aos-delay="600"><u>Token Supply</u></h1>
              <h1 data-aos="fade-up" data-aos-delay="500" id="tokenSupply"></h1>
            </div>
          </div>

        </div>
        <nav id="navbar" class="navbar" style="display: flex;justify-content: center;">
          <a class="getstarted scrollto" data-aos="fade-right" id="co2-update-btn" data-aos-delay="800"
            href="/mark-co2">Mark Co2 Emission</a>
          <a class="getstarted scrollto" data-aos="fade-left" id="reportLinkBtn" data-aos-delay="800"
            href="/report-co2">Co2 Report</a>
        </nav>

      </div>
    </div>

  </section><!-- End Hero -->
  <!-- Vendor JS Files -->
  <script src="vendor/purecounter/purecounter_vanilla.js"></script>
  <script src="vendor/aos/aos.js"></script>
  <script src="vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
  <script src="vendor/glightbox/js/glightbox.min.js"></script>
  <script src="vendor/isotope-layout/isotope.pkgd.min.js"></script>
  <script src="vendor/swiper/swiper-bundle.min.js"></script>
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js"></script>
  <!-- Include all compiled plugins (below), or include individual files as needed -->
  <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.1.3/js/bootstrap.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/truffle-contract@4.0.31/dist/truffle-contract.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/web3/1.7.0-rc.0/web3.min.js"></script>

  <!-- Template Main JS File -->
  <script src="js/main.js"></script>
  <script src="js/app.js"></script>
  <script>
    App.tokenDetails()
    App.KYCStatus()
    cookies = document.cookie.split(';')
    console.log(cookies)
    document.getElementById(cookies[0].split('=')[0].trim()).innerHTML = decodeURIComponent(cookies[0].split('=')[1])
    document.getElementById(cookies[1].split('=')[0].trim()).innerHTML = decodeURIComponent(cookies[1].split('=')[1])
    document.getElementById(cookies[2].split('=')[0].trim()).innerHTML = decodeURIComponent(cookies[2].split('=')[1])
    if (document.getElementById('role').innerHTML == 'government') {
      document.getElementById('reportLink').href = '/all-emission'
      document.getElementById('reportLink').innerHTML = 'All Industries Report'
      document.getElementById('reportLinkBtn').href = '/all-emission'
      document.getElementById('co2-update').href = '/allowance'
      document.getElementById('co2-update').innerHTML = 'Allocate Tokens for Industries'
      document.getElementById('co2-update-btn').style.display = 'none'
      document.getElementById('buyToken').style.display = 'none'
      document.getElementById('industryAllowance').style.display = 'none'
      document.getElementById('sellToken').style.display = 'none'
      document.getElementById('marketplace').style.display = 'none'
      document.getElementById('kycSection').style.display = 'none'
    } else if (document.getElementById('role').innerHTML == 'individual') {
      document.getElementById('reportLink').innerHTML = 'Your Emission Report'
      document.getElementById('kyc').style.display = 'none'
      document.getElementById('industryAllowance').style.display = 'none'

      document.querySelector("#tokenAvailable").innerHTML = parseInt(localStorage.getItem('userTokens')) + 'GCT'
      
      document.getElementById('tokenPrice').style.display = 'none'
      document.getElementById('tokenSupply').style.display = 'none'
      document.getElementById('kycSection').style.display = 'none'

      document.getElementById('tokenStatusTitle').style.display = 'none'

      document.getElementById('buyToken').style.display = 'none'
      document.getElementById('sellToken').style.display = 'none'
      document.getElementById('marketplace').style.display = 'none'

      document.getElementById('quiz-title').innerHTML = 'Quiz for Rewards, Go Green!'
      document.getElementById('quiz-link').innerHTML = '<a href="/quiz-reward" target="_blank">Attend Your Quiz...</a>'
    }else{
      document.getElementById('kyc').style.display = 'none'

    }
  </script>
</body>

</html>